	</beans:bean>
	
	<!-- 게시판 비밀번호 확인 -->
	<interceptors>
		<interceptor>
			<mapping path="/showInquiry/**" />
			<exclude-mapping path="/login/**" />
			<beans:bean id="commonInterceptor" class="com.org.ticketzone.interceptor.CommonInterceptor" />
		</interceptor>
	</interceptors>
